<!DOCTYPE html>
<html>
  <%- include('layouts/header'); -%>
  <%- include('layouts/styles'); -%>
  
<body>
  <%- include('layouts/navbar'); -%>

    <div class="container register-form">

        <div class="form">
            <div class="note">
                <h3>Create a new blog post</h3>
            </div>          
              
            <div class="form-content">
                <form action="/posts/store" method="POST">
                        <div class="form-group">
                            <label for="title">Title of the Blog Post</label>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Title" value="t1" name="title" id="title"/>
                        </div>
                        <div class="form-group">
                            <label for="body">Blog Post Content</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Blog content" value="b1" name="body" id="body" />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <%- include('layouts/footer'); -%>
    <%- include('layouts/scripts'); -%>

</body>
</html>
